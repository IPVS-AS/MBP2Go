<android.support.v7.widget.LinearLayoutCompat xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/txtSensorName"
            android:layout_width="227dp"
            android:layout_height="52dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgSensor"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="contact det"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgSensor"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            card_view:srcCompat="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/txtSensorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSensorName"
            android:layout_toEndOf="@+id/imgSensor"
            android:text="TextView" />

        <com.ekalips.fancybuttonproj.FancyButton
            android:id="@+id/btn_tgl_sensorstartpause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="10dp"
            app:f_btnStyle="stroke_fill"
            app:f_fillColor="@color/dark_screen2"
            app:f_hideFillAfterCollapse="false"
            app:f_progressColor="@android:color/holo_green_light"
            app:f_strokeColor="@android:color/white"
            app:f_text="Pause"
            app:f_textColor="@android:color/background_light" />

        <com.ekalips.fancybuttonproj.FancyButton
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtSensorName"
            android:layout_alignBottom="@+id/txtSensorId"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            app:f_btnStyle="stroke_fill"
            app:f_fillColor="@color/dark_screen2"
            app:f_hideFillAfterCollapse="false"
            app:f_progressColor="@android:color/holo_green_light"
            app:f_strokeColor="@android:color/white"
            app:f_text="Deploy"
            app:f_textColor="@android:color/background_light">

        </com.ekalips.fancybuttonproj.FancyButton>



    </RelativeLayout>
</android.support.v7.widget.LinearLayoutCompat>